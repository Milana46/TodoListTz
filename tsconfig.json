{
  "compilerOptions": {
    "jsx": "react",
    "types": ["jest", "@testing-library/jest-dom"],
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "src/**/*.spec.ts"]
}